{
    "compilerOptions": {
        "target": "ES2015",
        "module": "CommonJS",
        "lib": [
            "ES2015"
        ],
        "allowJs": false,
        "strict": true,
        "esModuleInterop": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "outDir": "./dist",
        "rootDir": "./src"
    },
    "include": [
        "./**/*.ts",
        "*.ts",
        "src/**/*.ts",
        "./**/*.d.ts"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts",
        "**/*.test.ts"
    ]
}